#-----------------------------------------------------------------------------
# panel with no covariates
#-----------------------------------------------------------------------------
reset.sim()
te <- 0
time.periods <- 3
biters <- 100
bout <- pbapply::pbsapply(1:biters, function(b) {
  cat(paste0("\niter:",b,"\n"))
  sim(xformla=~X)$CvMpval
}, cl=3)
mean( bout < .05 )


# expect to reject about 5% of the time

